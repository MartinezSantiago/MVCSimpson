@model IEnumerable<MVCPractica2.Mapper.DTO.Simpson.SimpsonViewDTO>

@{
    ViewData["Title"] = "Personajes";
}
<head>
    <link rel="stylesheet" href="~/css/Fondo.css" />
       <link rel="stylesheet" href="~/css/Index.css" />
             <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'>      
</head>
<h1>Index</h1>
    
<p>
    @{
        if (string.Compare(@ViewBag.Role,"Admin")==0)
        {
                <a asp-action="Create">Create New</a>
        }
    }
     
</p>
<table class="table table-hover table-dark" id="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lastname)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nationality)
            </th>
          <th>
              Image
          </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nationality)
            </td>
         <td>
             
             <img src="/images/@item.ImagePath" width="70" height="60"> 
         </td>
         <td>
                @{       
                    if (string.Compare(@ViewBag.Role, "Admin") == 0)
                    {
                       
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-trash"></i></a> 
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Details"><i class="fa fa-eye"></i></a>

                        }
                        if (string.Compare(@ViewBag.Role, "User")==0)
                        {
                                 
                             <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Details"><i class="fa fa-eye"></i></a>
                      
                        
                    }    
                        }
                    
      </td>
        </tr>
}
    </tbody>
</table>